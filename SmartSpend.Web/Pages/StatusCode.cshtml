@page
@using Common.DotNet
@using Microsoft.Extensions.Options
@inject IOptions<CodebaseConfig> codebase
@model SmartSpend.AspNet.Pages.StatusCodeModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "HTTP Error " + Model.ErrorCode;
}
<div class="mt-2">
    <h1 class="text-center" style="font-size:200px">@Model.ErrorCode</h1>
    <h2 class="text-center">@Model.Reason</h2>
</div>
<div class="text-center mt-5">
    <p><a class="btn btn-primary" asp-page="Home"> <span class="btn-label"><i class="fa fa-home"></i></span> Home Page</a></p>
    <p><a class="btn btn-secondary" href="@codebase.Value.IssuesLink" target="_blank"> <span class="btn-label"><i class="fab fa-github"></i></span> Report an Issue</a></p>
</div>
